<%= form_with model: [@cycle, @invitation] do |f| %>
  <div class="modal__header">Share cycle with a new Customer</div>
  <%= f.text_field :email, required: true, placeholder: "Email Addresses...*", class: "modal__email" %>
  <div class="modal__message">Want to include a message with the invite?</div>
  <%=  f.text_area :message, placeholder: "Please enter your message...", class: "modal__message-input" %>
  <div class="modal__info"> Your are about to share with the individuals above:</div>
  <ul>
    <li class="modal__cycle-name"><%= @cycle.name %></li>
  </ul>
  <div class="send-button-container"><%= f.submit 'send invitation', class: "modal__send-button" %></div>
<% end %>
